@model APICredentials
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create 3CommaAPI Credentials</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@

        <div class="mb-3">
            <label asp-for="APIKey"></label>
            <input asp-for="APIKey" class="form-control" />
            <span asp-validation-for="APIKey" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="APISecret"></label>
            <input asp-for="APISecret" class="form-control" />
            <span asp-validation-for="APISecret" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="APIInf" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
