@{
}

@model CAlert

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Alert</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Rule.RuleName"></label>
            <select id="ddlRule" class="form-control" asp-for="RuleID" asp-items="@(new SelectList(@ViewBag.RuleList,"RuleID", "RuleName"))">
            </select>
            <span asp-validation-for="Rule.RuleName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Message.MessageName"></label>
            <select id="ddlMessage" class="form-control" asp-for="MessageID" asp-items="@(new SelectList(@ViewBag.MessageList,"MessageID", "MessageName"))">
            </select>
            <span asp-validation-for="Message.MessageName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Alert" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>