@{
    int counter = 0;
}
@model List<CRuleInfo>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Rule List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Rule" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp;Create New Rule
            </a>
        </div>
    </div>

    <div class="container p-3">
        <br /><br />
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Rule Name</th>
                    <th>Rule Target</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var oRule in Model)
                {
                    counter = counter + 1;
                <tr>
                    <td>@counter</td>
                    <td>@oRule.RuleName</td>
                    <td>@oRule.Target</td>
                    <td>@oRule.Status.ActiveStatus</td>
                    <td>
                        <a asp-action="Edit" asp-route-ruleId="@oRule.RuleID" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                        <a asp-action="Delete" asp-route-ruleId="@oRule.RuleID" class="delete" title="Delete" data-toggle="tooltip" data-bs-target="#exampleModal" onclick="return confirm('Are you sure you want to delete this?')"><i class="material-icons">&#xE872;</i></a>
                    </td>
                </tr>
                }



        </table>
    </div>
</div>