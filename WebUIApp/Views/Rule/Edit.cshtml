@model CRuleInfo
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Rule</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="RuleName"></label>
            <input asp-for="RuleName" class="form-control" />
            <span asp-validation-for="RuleName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Target"></label>
            <input asp-for="Target" class="form-control" />
            <span asp-validation-for="Target" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Status.ActiveStatus"></label>
            <select id="ddlActiveStatus" class="form-control" asp-for="StatusId" asp-items="@(new SelectList(ViewBag.StatusList,"StatusId", "ActiveStatus"))">
            </select>
            <span asp-validation-for="Status.ActiveStatus" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Rule" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>