@{
}
@model CMessage
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Message</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="MessageName"></label>
            <input asp-for="MessageName" class="form-control" />
            <span asp-validation-for="MessageName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Message" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>