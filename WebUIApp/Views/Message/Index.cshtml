@{
    ViewData["Title"] = "Index";
    int counter = 0;
}
@model IEnumerable<CMessage>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Message List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Message" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp;Create New Message
            </a>
        </div>
    </div>

    <div class="container p-3">
        <br /><br />
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>MessageCode</th>
                    <th>Message</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                
                @foreach (var oMessage in Model)
                {
                    counter = counter + 1;
                <tr>
                    <td>@counter</td>
                    <td>@oMessage.MessageCode</td>
                    <td>@oMessage.MessageName</td>

                    <td>
                        <a asp-action="Edit" asp-route-messageid="@oMessage.MessageID" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                        <a asp-action="Delete" asp-route-messageid="@oMessage.MessageID" class="delete" title="Delete" data-toggle="tooltip" data-bs-target="#exampleModal" onclick="return confirm('Are you sure you want to delete this?')"><i class="material-icons">&#xE872;</i></a>
                    </td>
                </tr>
                }

                

        </table>
    </div>
    </div>
